<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/teal</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Theme.WeatherApp.Splashscreen" parent="Theme.AppCompat.NoActionBar" >
        <item name="windowSplashScreenBackground">@drawable/home_screen_background_drawable</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.WeatherApp</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

</resources>